<%- include("header.ejs") %>
  <style>
    body {
      background-color: #F2F0EC;
    }

    input::-webkit-file-upload-button {
      background-color: #E5312D;
      color: white;
      font-size: 2.5rem;
      padding: 8px 55px;
      border-radius: 8px;
      cursor: pointer;
      border: 0;
    }
  </style>

  <div class="container text-center">
    <div class="row">
      <div class="col-md-6 m-auto">
        <h1 class="display-4 my-4">Upload Files</h1>
        <p>One stop solution to save your Documents.</p>
        <form action="/upload" method="POST" enctype="multipart/form-data">
          <div class="custom-file mb-3 form-group">
            <hr><br>
            <input type="file" name="files" id="file" required>
          </div><br>
          <button type="submit" class="btn btn-primary btn-block"><i class="fa-solid fa-cloud-arrow-up fa-xl"></i>
            Upload</button>
        </form>
      </div>
    </div>
  </div>

  <%- include("footer.ejs") %>
    </body>