<%- include("header.ejs") %>
    <style>
        body {
            background-color: #F2F0EC;
        }

        img {
            height: 100px;
            width: 100px;
        }

        h3 {
            margin: 0 5%;
        }

        #main {
            margin: 15% 15%;
            text-align: center;
        }
    </style>


    <div class="container text-center">
        <div class="row ">
            <div class="col-md-6 m-auto">
                <h1 class="display-4 my-4">Download Files</h1>
                <p>One stop solution to save your Documents.</p>
                <hr><br>
                <form action="/download" method="post">
                    <!-- CODE LOGIC FOR DISPLAYING FILES  -->
                    <% files.forEach((file)=>{ %>
                        <li style="text-align: left;">
                            <%= file.Key %>
                        </li><br>
                        <% }) %>
                            <input type="text" placeholder="Enter the full filename you want to download"
                                name="filename" required autocomplete="off" class="form-control signup-items" />
                            <br>
                            <button type="submit" class="btn btn-primary form-control signup-items"><i
                                    class="fa-solid fa-cloud-arrow-down fa-xl"></i> Download</button>
                </form>

            </div>

        </div>
    </div>

    <%- include("footer.ejs") %>
        </body>